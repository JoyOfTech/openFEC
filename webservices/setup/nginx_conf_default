# nginx config for openFEC webserver.
# Put it in place by running:
# sudo cp /usr/local/home/$CURRENT_USER/openFEC/webservices/setup/nginx_conf_default /etc/nginx/vhosts/default.conf

# HTTP server
server {
  listen 80;
  server_name  fec.18f.us;

  rewrite /eregs/eregs/(.*)? /eregs/$1 ;
  rewrite /eregs/static/(.*)? /regulations/static/$1 ;

  location /regulations/static/ {
    root /usr/local/home/ubuntu/regulations-site/;
  }

        location /rest/ {
                        proxy_pass http://localhost:5000/;
			auth_basic "Restricted";
			auth_basic_user_file /etc/nginx/.htpasswd;
          }

        location /htsql/ {
                        proxy_pass http://localhost:8081/;
			auth_basic "Restricted";
			auth_basic_user_file /etc/nginx/.htpasswd;
          }

        location /eregs/ {
                        proxy_pass http://localhost:8000/;
			auth_basic "Restricted";
			auth_basic_user_file /etc/nginx/.htpasswd;
          }


        location /eregs-api/ {
                        proxy_pass http://localhost:8001/;
			auth_basic "Restricted";
			auth_basic_user_file /etc/nginx/.htpasswd;
          }

        location / {
                        proxy_pass http://localhost:3000/;
			auth_basic "Restricted";
			auth_basic_user_file /etc/nginx/.htpasswd;
          }

}


# HTTPS server (with SPDY enabled)
server {
  listen 443 ssl spdy;
  server_name  fec.18f.us;

  ssl_certificate      /etc/nginx/ssl/keys/star.18f.us-chain.crt;
  ssl_certificate_key  /etc/nginx/ssl/keys/star.18f.us.key;

  include ssl/ssl.rules;

  rewrite /eregs/eregs/(.*)? /eregs/$1 ;
  rewrite /eregs/static/(.*)? /regulations/static/$1 ;

  location /regulations/static/ {
    root /usr/local/home/ubuntu/regulations-site/;
  }

  location /rest/ {
		proxy_pass http://localhost:5000/;
		auth_basic "Restricted";
		auth_basic_user_file /etc/nginx/.htpasswd;
  }

  location /htsql/ {
		proxy_pass http://localhost:8081/;
		auth_basic "Restricted";
		auth_basic_user_file /etc/nginx/.htpasswd;
  }

  location /eregs/ {
		proxy_pass http://localhost:8000/;
		auth_basic "Restricted";
		auth_basic_user_file /etc/nginx/.htpasswd;
  }

  location /eregs-api/ {
		proxy_pass http://localhost:8001/;
		auth_basic "Restricted";
		auth_basic_user_file /etc/nginx/.htpasswd;
  }

  location / {
		proxy_pass http://localhost:3000/;
		auth_basic "Restricted";
		auth_basic_user_file /etc/nginx/.htpasswd;
  }

}

